<h1>Calendar</h1>

<%= month_calendar events: @calendars do |date, calendar| %>
      <div style = "font-size: 15px"><strong></strong></string><%=date.day%></strong></div>
    
      <% calendar.each do |calendar| %>
        <div>
          <%= link_to calendar.name, calendar_path(calendar), :class => 'navbar-link' %>
          <p><%= calendar.start_time.strftime("%I:%M%p") + " - " + calendar.end_time.strftime("%I:%M%p")%></p>
        </div>
      <% end %>
    <% end %>
