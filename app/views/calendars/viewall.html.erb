

<h1 class="text-center"><%= "#{@user.name}'s Calendar" %></h1>

<%= month_calendar events: @calendars do |date, calendar| %>
      <div style = "font-size: 15px"><strong></strong></string><%=date.day%></strong></div>
    
      <% calendar.each do |calendar| %>
        <div>
          <%= link_to calendar.name, calendar_path(calendar), :class => 'navbar-link' %>
        </div>
        <p><%= calendar.start_time.strftime('%I:%M%p') + " - " + calendar.end_time.strftime('%I:%M%p')%></p>
      <% end %>
    <% end %>
<br>

<%= link_to "Back to Profile", member_profile_path, :class => 'navbar-link'  %> 

 <% if current_user.membership == "Administrator" || current_user.membership == "Manager" %>
 | <%= link_to "View My Calendar", calendars_path, :class => 'navbar-link'  %> |
  <%= link_to 'New Event', new_calendar_path %>
<% end %>