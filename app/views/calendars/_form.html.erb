<% if !flash[:error].blank? %> 
   <div class="flashNotice col last">
     <% if !flash[:email1].blank? %>
      <div class="alert alert-danger"><a href="#" class="alert-link"><%= flash[:email1]%></a></div>
    <% end %> 
    <% if !flash[:email2].blank? %> 
      <div class="alert alert-danger"><a href="#" class="alert-link"><%= flash[:email2]%></a></div>
    <% end %>
    <% if !flash[:both].blank? %> 
      <div class="alert alert-danger"><a href="#" class="alert-link"><%= flash[:both]%></a></div>
    <% end %>
<% end %>
<div>Please leave both emails empty for a club event. </div>
<%= form_with(model: calendar, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :required => true %>
  </div>

  <div class="field">
    
    <%= form.label "Student Email" %>
    <% if params['id'] != nil and Calendar.where(:id => params['id']).first.UserId != nil  %>
        <%= form.text_field :email1, :value => User.where(:id => Calendar.where(:id => params['id']).first.UserId).first.email  %>
    <% else %> 
      <%= form.text_field :email1 %>
    <% end %> 
    
  </div>

  <div class="field">
    <%= form.label "Coach Email" %>
    <% if params['id'] != nil and Calendar.where(:id => params['id']).first.OtherId != nil %>
      <%= form.text_field :email2, :value => User.where(:id => Calendar.where(:id => params['id']).first.OtherId).first.email  %>
    <% else %> 
      <%= form.text_field :email2 %>
    <% end %> 

  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>
  
  <div class="field">
    <%= form.label :details %>
    <%= form.text_field :details,  :class => "detailsBox" %>
  </div>
  
  <div class="field">
    <%= form.label :conflict %>
    <%= form.check_box :conflict, {checked: true}, "Conflict", "None" %>
  </div>


  <div class="actions">
    <%= form.submit :Submit, :id => "Submit" %>
  </div>
<% end %>
