<h2 class="text-center"><%= "#{@user.name}'s Event List" %></h2><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Details</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.name %></td>
        <td><%= calendar.start_time.strftime('%a %m/%d/%Y %I:%M%p') %></td>
        <td><%= calendar.end_time.strftime('%a %m/%d/%Y %I:%M%p') %></td>
        <td><%= link_to "Details", calendar_path(calendar), :class => 'navbar-link' %> </td>
         <!--link_to 'Edit', edit_calendar_path(calendar)-->
        <td><%=link_to icon('far', 'trash-alt'),  calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<td><%= link_to "Back", all_calendar_path, :class => 'btn btn-link' %> </td>

