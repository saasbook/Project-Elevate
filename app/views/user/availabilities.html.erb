<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

<h2> Current Availabilities </h2>

<table class="table table-hover">
  <tbody>
    <% @time_table.each do |record| %>
      <tr>
        <td><%= record.day%></td>
        <td><%= record.start_time.strftime("%l:%M%p")%> - <%= record.end_time.strftime("%l:%M%p") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for :user, url: add_availabilities_path do |f| %>
  <div class="date">
    Choose Date: <br />
    <%= f.select :day, Date::DAYNAMES %> <br />
    Start Time: <br />
    <%= f.select :start_time, CoachAvailability.availibility %> <br />
    End Time: <br />
    <%= f.select :end_time, CoachAvailability.availibility %> <br />
    <%= f.submit value: 'Add availibility' %>
  </div>
<% end %>