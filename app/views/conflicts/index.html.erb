<div class="card-deck">
<div class="card">
  <div class="card-body">
    <h4 class="card-title" style="text-align:center;"> Resolve Conflicts Log </h4>
<table class="table table-hover">
<thead>
    <tr>
      <th>Event Name</th>  
      <th>Club Member</th>
      <th>Club Member Email</th>
      <th>Coach</th>
      <th>Coach Email</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Edit Event</th>
    </tr>
</thead>
  <tbody >
    <% @calendar.each do |record| %>
      <tr>
        <td class="event_name"><%= record.name%></td>
        <% if User.find(record.UserId).membership == "Club Member" %>
          <td class="club_member"><%= User.find(record.UserId).name%></td>
          <td class="club_member_email"><%= User.find(record.UserId).email%></td>
          <td class="coach"><%= User.find(record.OtherId).name%></td>
          <td class="coach_email"><%= User.find(record.OtherId).email%></td>
        <% else %>
          <td class="club_member"><%= User.find(record.OtherId).name%></td>
          <td class="club_member_email"><%= User.find(record.OtherId).email%></td>
          <td class="coach"><%= User.find(record.UserId).name%></td>
          <td class="coach_email"><%= User.find(record.UserId).email%></td>
        <% end %> 
        
        <td class="start_time"><%= record.start_time.strftime('%a %m/%d/%Y %I:%M%p')%></td>
        <td class="end_time"><%= record.end_time.strftime('%a %m/%d/%Y %I:%M%p')%></td>
        <td class="edit">      
            <%= link_to "Resolve", edit_calendar_path(record.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
<p>
<p>
<%= link_to "Back", :back %>
</p>
